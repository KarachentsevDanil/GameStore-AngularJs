@using GSP.BLL.Resources
@section scripts {
    <script src="~/js/Controllers/categoryController.js"></script>
    <script src="~/js/Services/categoryService.js"></script>
    <script src="~/js/Controllers/gameController.js"></script>
    <script src="~/js/Services/gameService.js"></script>
}

<div class="container ng-cloak margin-top-2" ng-controller="gameController" ng-init="filterGames()">
    <toaster-container></toaster-container>
    <div class="col-lg-4">
        <div class="row">
            <div>
                <div class="form-group">
                    <button class="btn btn-danger pull-right" ng-click="clearFilters()" ng-show="searchValue.length > 0">
                        <i class="fa fa-refresh">
                        </i>
                    </button>
                    <div class="list-group" ng-model="game">
                        <div class="ui icon fluid input">
                            <input ng-model="searchValue" ng-change="filterGames()" type="text" placeholder="@Labels.Search">
                            <i class="circular search link icon"></i>
                        </div>
                    </div>

                    <ul uib-pagination total-items="totalItems" ng-model="currentPage" max-size="maxSize" class="pagination-sm margin-top-0" boundary-link-numbers="true" rotate="false" items-per-page="itemsPerPage" ng-click="changePage();" next-text="@Commands.NextItem" previous-text="@Commands.PreviousItem"></ul>

                    <div ng-click="selectGame(game)" ng-repeat="game in Games" class="list-group-item game-btn">
                        <div class="row">
                            <div class="col-lg-10">
                                <span>@Entities.Game_Name: {{ game.Name }}</span><br />
                                <span>@Entities.Game_Category: {{game.CategoryName}}</span><br />
                                <span>@Entities.Game_Price: {{game.Price}}</span>
                            </div>
                            <div class="col-lg-2">
                                <span ng-click="deleteGame(game.GameId)" class="glyphicon glyphicon-trash pull-right remove-btn"></span>
                            </div>
                        </div>
                    </div>

                    <ul uib-pagination total-items="totalItems" ng-model="currentPage" max-size="maxSize" class="pagination-sm" boundary-link-numbers="true" rotate="false" items-per-page="itemsPerPage" ng-click="changePage();" next-text="@Commands.NextItem" previous-text="@Commands.PreviousItem"></ul>

                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-8">
        <div class="form-group form-horizontal">
            <div class="col-lg-offset-6 ui info message pull-right margin-top-10 margin-right-0 div-width-330">

                @Entities.Game_Name: <input class="form-control" ng-model="EditName" type="text" />
                @Entities.Game_Description: <textarea class="form-control" ng-model="EditDescription"> </textarea>
                @Entities.Game_Price:<input class="form-control" ng-model="EditPrice" type="number" />

                <button class="primary ui button form-control margin-top-5" ng-click="editGame()">Edit</button>
            </div>
        </div>
    </div>


</div>
